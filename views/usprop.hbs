<div id="page-wrapper">
    <div class="main-page">
        <h2 class="title1">All Users
        </h2>
        <div class="blank-page widget-shadow scroll" id="style-2 div1">
            <ul class="list-group">
                {{#each users as |user|}}

                <li class="list-group-item">
                    <h3>
                        <a href="/users/{{user._id}}">
                            <span class="text-capitalize">{{user.displayName}}</span>
                            <span class="pull-right">{{user.email}}</span>
                        </a>
                    </h3>
                    <table class="table table-condensed">
                        <tr>
                            <th>Property Number</th>
                            <th>Area</th>
                            <th>Use Code</th>
                        </tr>
                        {{#each user.properties as |prop|}}
                        <tr>
                            <td>{{prop.prop_num}}</td>
                            <td>{{prop.area.name}}</td>
                            <td>{{prop.use_code.name}}</td>
                        </tr>
                        {{/each}}
                    </table>
                </li>
                <hr style="margin-top:40px; margin-bottom:40px;"> {{/each}}
            </ul>
        </div>
    </div>
</div>