<div id="page-wrapper">
    <div class="main-page">
        <h2 class="title1">Defaulters</h2>
        <div class="blank-page widget-shadow scroll" id="style-2 div1">
            <p class="pull-right btn btn-dark btn-sm prussy" id="print_it" onclick="window.print()"><i class="fa fa-print" style="color: #fff"></i> Print</p>
            <p class="pull-left btn btn-dark btn-sm prussy" onclick="window.location.reload()"><i class="fa fa-refresh" style="color: #fff"></i></p>
            <div class="clearfix"></div>
            <table class="table table-responsive">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount Owed</th>
                    <th>Amount Paid</th>
                </tr>
                </thead>
                <tbody>
                {{#each defaulters as |defaulter|}}
                    <tr>
                        <td>{{defaulter.owner.displayName}}</td>
                        <td>{{defaulter.total}}</td>
                        <td>{{defaulter.settled}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>


        </div>
    </div>
</div>
